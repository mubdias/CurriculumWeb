@model CurriculumModel
@{
    ViewData["Title"] = "Curriculum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Header
{
    <div class="container-fluid position-relative d-flex align-items-center justify-content-between">
        <a href="#about" class="logo d-flex align-items-center me-auto me-xl-0">
            <h1 class="sitename">Murilo</h1>
        </a>
        <nav id="navmenu" class="navmenu">
            <ul>
                <li><a href="#home" class="active">Início</a></li>
                <li><a href="#about">Sobre</a></li>
                <li><a href="#resume">Currículo</a></li>
                <li><a href="#contact">Contate-me</a></li>
            </ul>
        </nav>
        <div class="header-social-links">
            <a href="https://github.com/mubdias" target="_blank" class="bi-github"><i class="bi bi-github-x"></i></a>
            <a href="https://www.linkedin.com/in/murilo-b-15854711a/" target="_blank" class="bi-linkedin"><i class="bi linkedin"></i></a>
        </div>
    </div>
}

<section id="home" class="home section dark-background">

    <img src="~/img/tech-bg.jpeg" alt="" data-aos="fade-in">

    <div class="container text-center" data-aos="fade-up" data-aos-delay="100">
        <h2>Murilo Barberini Dias</h2>
        <p>Comprometido em ser referência naquilo que me apaixono e domino, transformo desafios em soluções.</p>
        <a href="#about" class="btn-scroll" title="Scroll Down"><i class="bi bi-chevron-down"></i></a>
    </div>

</section>

<section id="about" class="about section">

    <div class="container section-title" data-aos="fade-up">
        <span class="description-title">Sobre</span>
        <h2>Sobre</h2>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 justify-content-center">
            <div class="col-lg-8 content justify-content-center">
                <div class="row mb-5" style="justify-self: center">
                    <h2>Estágio em desenvolvimento &amp; Desenvolvedor back-end</h2>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li>
                                <i class="bi bi-chevron-right"></i> <strong>LinkedIn:</strong>
                                <div class="row box-btn">
                                    <button type="button" onclick="window.open('https://www.linkedin.com/in/murilo-b-15854711a/')" class="btn btn-primary p-0 bi bi-linkedin">
                                    <span>LinkedIn</span>
                                    </button>
                                </div>
                            </li>
                            <li>
                                <i class="bi bi-chevron-right"></i>
                                <strong>Cidade:</strong>
                                <span>Santo André, SP</span>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li>
                            <i class="bi bi-chevron-right"></i>
                            <strong>Formação:</strong>
                            <span>Ciência da Computação (12/2026)</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <p class="py-3" style="text-align:justify">
                    Sou estudante de Ciência da Computação com foco no desenvolvimento web e de softwares, como também,
                    no aperfeiçoamento da qualidade. Possuo experiência com desenvolvimento de aplicações web e garantia
                    da qualidade em robôs de atendimento como URA, BOT e Webchat. Sou proativo, persistente e consistente no aprendizado de novas tecnologias e ferramentas,
                    sempre disposto a enfrentar novos desafios!
                </p>
            </div>
        </div>

    </div>

    <section id="resume" class="resume section">

        
        <div class="container section-title" data-aos="fade-up">
            <span class="description-title">Meu currículo</span>
            <h2>Meu currículo</h2>
        </div>

        <div class="container">

            <div class="row">

                <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                    <h3 class="resume-title">Contato</h3>

                    <div class="resume-item pb-0">
                        <h4>Murilo Barberini Dias</h4>
                        <ul>
                            <li>Santo André, SP, 09090640</li>
                            <li>(11) 97101-0641</li>
                            <li>murilo_barberini@hotmail.com</li>
                        </ul>
                    </div>

                    <h3 class="resume-title">Formação</h3>
                    @foreach (var education in Model.Educations)
                    {
                        <div class="resume-item">
                            <h4>Bacharelado em @education.Course</h4>
                            <h5>@education.DurationBegin - @education.DurationEnd</h5>
                            <p><em>@education.Institution</em></p>
                        </div>
                    }

                </div>

                <div class="col-lg-6" data-aos="fade-up" data-aos-delay="200">
                    <h3 class="resume-title">Experiência profissional</h3>
                    @foreach (var experience in Model.Experiences)
                    {
                        <div class="resume-item">
                            <h4>@experience.Position</h4>
                            <h6>@experience.Company</h6>
                            <h5>@experience.DurationBegin | @experience.DurationEnd</h5>
                            <p><em>@experience.Location</em></p>
                            <p>@experience.Description</p>
                        </div>
                    }
                </div>

            </div>

        </div>

        <div class="container">
            <div class="row justify-content-center">
                <div class="container section-title mt-5 aos-init aos-animate" data-aos="fade-up">
                    <span class="description-title">Projetos</span>
                    <h2>Projetos</h2>
                </div>

                <div class="col-lg-6" data-aos="fade-up" data-aos-delay="200">
                    @foreach (var projects in Model.Project)
                    {
                        <div class="resume-item">
                            <h4>@projects.Title</h4>
                            <p class="project-description">@projects.Description</p>
                        </div>
                    }
                </div>
            </div>
        </div>

    </section>

    <section id="contact" class="contact section">

        <div class="container section-title" data-aos="fade-up">
            <span class="description-title">Contate-me</span>
            <h2>Contate-me</h2>
        </div>

        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row gy-4 justify-content-center" data-aos="fade-up" data-aos-delay="200">

                <div class="col-lg-4">
                    <div class="info-item d-flex flex-column justify-content-center align-items-center info-item-borders"
                        style="border-left: 0">
                        <i class="bi bi-phone"></i>
                        <h3>Chame no WhatsApp:</h3>
                        <a href="whatsapp://send?phone=11971010641&text=example" target="_blank"><img
                                src="~/img/apple.png"></a>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="info-item d-flex flex-column justify-content-center align-items-center">
                        <i class="bi bi-at"></i>
                        <h3 class="email">Mande um e-mail:</h3>
                        <a href="mailto:murilo_barberini@hotmail.com"><img src="~/img/email.png" alt=""></a>
                        
                    </div>
                </div>

            </div>
        </div>

   </section>

</section>

@section Footer
{
    <div class="container">
        <h3 class="sitename">Murilo B. Dias<br></h3>
        <div class="social-links d-flex justify-content-center">
            <a href="https://github.com/mubdias" target="_blank"><i class="bi bi-github"></i></a>
            <a href="https://www.linkedin.com/in/murilo-b-15854711a/" target="_blank"><i class="bi bi-linkedin"></i></a>
        </div>
        <div class="container">
            <div class="copyright">
                <span>Copyright</span> <strong class="px-1 sitename">Murilo</strong> <span>All Rights Reserved</span>
            </div>
        </div>
    </div>
}